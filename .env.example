# ==============================================
# NovaDrive Motors - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Database
# For development: SQLite
DATABASE_URL="file:./dev.db"
# For production: PostgreSQL (recommended)
# DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secret-using-openssl-rand-base64-32"

# Google OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (Resend)
# Get your API key at: https://resend.com/api-keys
# Free tier: 3,000 emails/month
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NOTIFICATION_EMAIL="notifications@yourdomain.com"

# Informex/IVO Crawler (Optional)
# Only needed if using the vehicle import feature
INFORMEX_EMAIL="your-informex-email"
INFORMEX_PASSWORD="your-informex-password"
IVO_CLIENT_ID="your-ivo-client-id"

# Crawler Settings (Optional)
CRAWLER_HEADLESS="true"
CRAWLER_SLOW_MO="0"
CRAWLER_IMAGE_CONCURRENCY="4"
